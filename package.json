{
  "name": "accessify",
  "version": "1.0.0",
  "description": "A simple REST API to generate and cache anonymous Spotify access tokens using Playwright",
  "main": "dist/index.js",
  "private": true,
  "author": "iaMJ",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "start": "node dist/server.js",
    "dev": "tsup --watch & nodemon dist/server.js",
    "format": "biome format --write ./src",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": ["npm run format"]
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "hono": "^4.9.0",
    "@hono/node-server": "^1.18.1",
    "playwright": "^1.54.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^24.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
