{
  "name": "accessify",
  "description": "A simple REST API to generate and cache anonymous Spotify access tokens using Playwright",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "author": "iaMJ",
  "license": "MIT",
  "lint-staged": {
    "*.ts": ["bun format"]
  },
  "scripts": {
    "start": "tsup && node dist/server.js",
    "start:run": "node dist/server.js",
    "format": "biome format --write ./src",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "dotenv": "^17.2.0",
    "hono": "^4.8.4",
    "playwright": "1.53.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/bun": "latest",
    "@types/node": "^24.0.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
